<div class="container p-4">
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-body">
               <form action="/notes/add" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="Title" autofocus></input>                    
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="text" placeholder="Description" rows="8"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark btn-block">Save</button>
                </div>
               </form>
            </div>
        </div>
    </div>
</div>
</div>